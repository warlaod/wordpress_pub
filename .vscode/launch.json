{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug(Local)",
      "type": "php",
      // for local
      "hostname": "0.0.0.0",
      "pathMappings": {
        "/var/www/html": "${workspaceRoot}"
      },
      "request": "launch",
      "port": 9000,
      "xdebugSettings": {
        "max_children": 999,
        "max_data": -1,
        "max_depth": 10
      }
    },
